.blankTop {
  background-color: white;
  height: 3vh;
  width: 100vw;
  position: fixed;
}

.pre {
  margin-top: 3vh;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-shadow: 0px 20px 30px -10px rgb(230, 228, 228);
  position: fixed;
  height: 20vh;
  width: 90vw;
  margin-left: 5vw;
  border-radius: 10px;
  background-color: white;
}

.boxLeft {
  width: 50%;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
}

.boxRight {
  margin-bottom: 4px;
  width: 50%;
  text-align: center;
  color: transparent;
  -webkit-text-stroke: 1px orange;
  /* letter-spacing: 0.04em; */
  font-family: Microsoft YaHei;
  letter-spacing: 0;
  font-size: 64rpx;
}

.line {
  /* top:25%; *//* left: 50%;
    margin-top: 25%; */
  height: 25%;
  width: 1px;
  background: radial-gradient(gray 20%, white 80%);
}

.subject {
  margin-left: 10vw;
  width: 80vw;
  height: 8vh;
  border-radius: 4vh;
  /* position: fixed; *//* opacity: 0.5; */
  font-family: PingFangSC-Regular;
  font-size: 35rpx;
  color: #11cd6e;
  letter-spacing: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.blank {
  height: 7vh;
}
