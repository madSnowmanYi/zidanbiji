.menu_group {
  position: absolute;
  right: 0rpx;
  bottom:0rpx;
   z-index:999;
}
.menu_left {
  height: 70rpx;
  display: inline-block;
  font-size: 28rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #000;
  background: #e8e8e8;
  letter-spacing: 2rpx;
  border-radius: 8rpx;
  box-shadow: 4rpx 4rpx 4rpx 0 #bbb;
  transition: all 0.15s linear;
}

.left {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.right {
  flex: 1;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.menu_right {
  width: 84rpx;
  height: 84rpx;
  background: linear-gradient(to bottom, #2fca68, #27c25d);
  border-radius: 50%;
  margin-left: 48rpx;
  box-shadow: 0 8rpx 20rpx #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.15s linear;
}

.menu_item {
  width: 400rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.menu_add_out {
  position: fixed;
  right: 0rpx;
  bottom: 0vh;
  display: flex;
}
.ques_info {
  height: 60rpx;
  display: flex;
  flex-direction: row;
 }
 .font_color_black {
  color: gray;
  font-size: 14px;
  font-weight: bold;
}
.menu_add_in {
  width: 10vh;
  height: 10vh;
  background: linear-gradient(to bottom, #2fca68, #27c25d);
  border-radius: 50%;
  margin-right: 4vh;
  margin-bottom: 2vh;
  box-shadow: 0 8rpx 20rpx #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.15s linear                                                                                                                                                                                                                                                               ;
}
.menu_add_in:active {
  transform: scale(0.90);
  opacity: 0.7;
}
image {
  width: 50rpx;
  height: 50rpx;
}

.menu_left:active, .menu_right:active {
  transform: scale(0.90);
  opacity: 0.7;
}
.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:white;
  z-index:990;
  top:0;
  left:0;
  opacity:0.96;
}
